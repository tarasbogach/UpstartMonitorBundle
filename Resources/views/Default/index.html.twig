<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Upstart Monitor</title>
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/upstartmonitor/UpstartMonitor.css') }}"/>
    <link type="text/css" rel="stylesheet"
          href="{{ asset('bundles/upstartmonitor/bootstrap-3.3.6-dist/css/bootstrap.min.css') }}"/>
    <link type="text/css" rel="stylesheet"
          href="{{ asset('bundles/upstartmonitor/bootstrap-3.3.6-dist/css/bootstrap-theme.min.css') }}"/>
    <script src="{{ asset('bundles/upstartmonitor/jquery-1.12.0.min.js') }}"></script>
    <script src="{{ asset('bundles/upstartmonitor/bootstrap-3.3.6-dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/upstartmonitor/UpstartMonitor.js') }}"></script>
    <script>$(function () {
            new UpstartMonitor('body', {{cnf|raw}});
        })</script>
</head>
<body class="container">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    <img height="20" src="{{ asset('bundles/upstartmonitor/120px-Logo_for_Upstart_daemon.png') }}">
                </a>
                <button class="navbar-btn btn btn-sm btn-success {{ el }}start">
                    <span class="glyphicon glyphicon-play"></span>
                    Start <span class="{{ el }}selectedTag"></span>
                </button>
                <button class="navbar-btn btn btn-sm btn-danger {{ el }}stop">
                    <span class="glyphicon glyphicon-stop"></span>
                    Stop <span class="{{ el }}selectedTag"></span>
                </button>
                <button class="navbar-btn btn btn-sm btn-warning {{ el }}restart">
                    <span class="glyphicon glyphicon-refresh"></span>
                    Restart <span class="{{ el }}selectedTag"></span>
                </button>
            </div>
        </div>
    </nav>
    <nav class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="container-fluid">
            <div class="navbar-header">
                <label class="label">Tags</label>
                <span class="{{ el }}tag"></span>
            </div>
        </div>
    </nav>
    <div class="panel {{ el }}jobPanel">
        <table class="table table-condensed {{ el }}job"></table>
    </div>
    <div class="{{ el }}disconnected">
        <div>Socket is disconnected, trying to reconnect...</div>
    </div>
</body>
</html>